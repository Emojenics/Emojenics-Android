<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imojen.imojnicsapp.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true"

            >



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">
                <!-- <ImageView
                     android:src="@mipmap/bg"
                     android:id="@+id/im1"
                     android:scaleType="fitXY"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"/> -->

                <ImageView android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#C3E6F8"
                    >

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="To set up emojenics, follow these steps:"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    />
                <ImageView android:src="@mipmap/downarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_gravity="center_horizontal" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:orientation="vertical"
                   android:id="@+id/ods">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingRight="25dp"
                    >
                    <ImageView android:src="@mipmap/settings"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="1. Open your device Settings"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#BADBEC"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        />

                </LinearLayout>
               </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:id="@+id/general">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="55dp"
                    >
                    <ImageView android:src="@mipmap/gen"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="2. General"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#BADBEC"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="3. Keyboard"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/keyboard"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="4. Keyboards"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/keyboards"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="5. Add New Keyboard"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/addkeyboard"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="6. Emojenics"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/emojenics"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="7. Tap emojenics-emojenics"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/tapemojen"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="8. Allow Full Access"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#BADBEC"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/allowaccess"/>


                <!-- <android.support.v7.widget.AppCompatButton
                     android:id="@+id/btn_login"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="24dp"
                     android:layout_marginBottom="24dp"
                     android:padding="12dp"
                     android:text="Login"/> -->
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/login"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/signinbg"
                        android:gravity="center"
                        android:layout_marginRight="0dp"/>
                    <TextView android:id="@+id/donebtnnn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignLeft="@+id/login"
                        android:layout_alignRight="@+id/login"
                        android:layout_alignTop="@+id/login"
                        android:layout_alignBottom="@+id/login"
                        android:text="DONE"
                        android:textColor="@color/white"
                        android:gravity="center"/>


                </RelativeLayout>


                <!-- android:layout_marginTop="30dp" -->

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
